@model CreateReimbursementVM

@{
    ViewData["Title"] = "Create Reimbursement";
}

<div class="container mt-5" style="max-width: 500px;">
    <h4 class="mb-4 font-weight-bold">Create Reimbursement</h4>

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="Name" class="font-weight-bold">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Amount" class="font-weight-bold">Amount</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="BeneficiaryId" class="font-weight-bold">Beneficiary</label>
            <select asp-for="BeneficiaryId" asp-items="Model.BeneficiariesItems" class="form-control">
                <option value="">Select Beneficiary</option>
            </select>
            <span asp-validation-for="BeneficiaryId" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="GroupId" class="font-weight-bold">Group</label>
            <select asp-for="GroupId" asp-items="Model.GroupsItems" class="form-control">
                <option value="">Select Group</option>
            </select>
            <span asp-validation-for="GroupId" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <button type="submit" class="btn btn-primary w-100">Submit</button>
        <a asp-action="List" class="btn btn-outline-secondary w-100 mt-2">Cancel</a>
    </form>
</div>

@section ReimbursementCSS {
    <link rel="stylesheet" href="~/css/form-style.css" />
}