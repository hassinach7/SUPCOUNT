@model SupCountFE.MVC.ViewModels.User.UpdateUserVM

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5" style="max-width: 600px;">
    <h3 class="mb-4">Edit User</h3>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="FullName" class="font-weight-bold"></label>
            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Email" class="font-weight-bold"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="UserName" class="font-weight-bold"></label>
            <input asp-for="UserName" class="form-control" placeholder="Enter username" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="PhoneNumber" class="font-weight-bold"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="SelectedRoles" class="font-weight-bold"></label>
            <select asp-for="SelectedRoles" class="form-control" multiple="multiple">
                @foreach (var role in Model.Roles)
                {
                    <option value="@role" selected="@(Model.SelectedRoles.Contains(role))">@role</option>
                }
            </select>
            <span asp-validation-for="SelectedRoles" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary btn-block mt-4">Save Changes</button>
        <a asp-action="List" class="btn btn-outline-secondary btn-block mt-2">Cancel</a>
    </form>
</div>
@section UserCSS {
    <link rel="stylesheet" href="~/css/form-style.css" />
}

