@model List<ReimbursementVM>

@{
    ViewData["Title"] = "Generated Reimbursements";
}

<div class="container mt-4">
    <h2 class="mb-3">Auto-Generated Reimbursements</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">No reimbursements were needed. Balances are already settled.</div>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>From</th>
                    <th>To</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SenderName</td>
                        <td>@item.BeneficiaryName</td>
                        <td>@item.Amount.ToString("0.00") €</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-action="List" asp-controller="Group" class="btn btn-outline-secondary mt-3">Back to Groups</a>
</div>
