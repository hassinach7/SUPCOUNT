@model ParticipateExpenseVM
@{
    ViewData["Title"] = "Participate";
}
<div class="container mt-5" style="max-width: 500px;">
    <h4 class="mb-4 font-weight-bold">Participate in Expense</h4>
    <form asp-action="Participate" method="post">
        <input type="hidden" asp-for="ExpenseId" />
		<div class="form-group">
            <label asp-for="ExpenseTitle" class="font-weight-bold">Expense Title</label>
            <input asp-for="ExpenseTitle" class="form-control" readonly />
        </div>
		<div class="form-group">
            <label asp-for="Weight" class="font-weight-bold">Weight</label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
        <a asp-action="List" class="btn btn-outline-secondary w-100 mt-2">Cancel</a>
	</form>
    </div>

