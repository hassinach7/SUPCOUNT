@using SupCountBE.Application.Responses.Category
@model IEnumerable<CategoryResponse>
<link rel="stylesheet" href="~/css/form-style.css" />

@{
    ViewData["Title"] = "List Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Categories</h2>
        <a class="btn btn-outline-primary" asp-action="Create">+ New Category</a>
    </div>

    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@category.Id">Edit</a>                      
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
