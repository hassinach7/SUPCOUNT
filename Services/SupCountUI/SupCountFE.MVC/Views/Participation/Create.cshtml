@model CreateParticipationVM

@{
    ViewData["Title"] = "Create Participation";
}

<div class="container mt-5" style="max-width: 500px;">

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="ExpenseId" class="font-weight-bold">Expense</label>
            <select asp-for="ExpenseId" asp-items="Model.ExpensesItems" class="form-control">
                <option value="">Select Expense</option>
            </select>
            <span asp-validation-for="ExpenseId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Weight" class="font-weight-bold">Weight</label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <button type="submit" class="btn btn-primary w-100">Submit</button>
        <a asp-action="List" class="btn btn-outline-secondary w-100 mt-2">Cancel</a>
    </form>
</div>

@section ParticipationCSS {
    <link rel="stylesheet" href="~/css/form-style.css" />
}
